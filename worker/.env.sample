# Domain allowed for authentication (e.g., your company's domain)
AUTH_DOMAIN=example.com

# Google OAuth credentials (from Google Cloud Console)
GOOGLE_CLIENT_ID=123456789-example.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-exampleSecret123xyz

# OAuth callback URL (must match the one configured in Google Cloud Console)
REDIRECT_URI=http://localhost:8787/oauth/callback

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com

# Frontend URL for redirects after authentication
FRONTEND_URL=http://localhost:3000

